block content
	
	.page-header.has-border-bottom.mb-0
		h1.page-title Bookings 
			span.text-muted  - 41
		.booking-filter-stack
			.d-flex
				select#inlineFormInputName2.custom-select.custom-select-sm.mb-2.mr-1(style='min-width:10rem;')
					option Bulk Action
					option Option 1
					option Option 2
				button.btn.btn-sm.btn-outline-secondary.mb-2(type='submit') Apply
			button.btn.btn-sm.btn-theme.mb-2.ml-4(data-toggle='collapse', href='#filter-collapse', role='button', aria-expanded='false', aria-controls='filter-collapse') 
				i.fas.fa-filter  
				span.d-none.d-xs-inline.d-sm-inline  Filter
				.filter-badge 3

			
		
	.page-body
		.content-box
			+filter-collapse
			
			
			// Mobile Sorting Options (hidden on desktop)
			.booking-table-filter-mobile.d-block.d-lg-none
				.form-group
					select.custom-select.custom-select-sm
						option(selected) Sort by:
						option ID
						option Guest Name
						option Check-In Date
						option Check-Out Date
						option Amount
						option Deposit
						option Payment Status
			
			// Desktop Sorting Options (hidden on mobile)
			.table-header.d-none.d-lg-block
				.row.no-gutters
					
					.col-2
						.table-box-check.d-flex
							.custom-control.custom-checkbox
								input#sorter-check.custom-control-input(type='checkbox')
								label.custom-control-label(for='sorter-check')
							a(href='#0') 
								span ID
					.col-3 
						a(href='#0') 
							span Guest
					.col-3
						.booking-box-dates 
							a(href='#0').booking-box-checkin 
								span Check-In 
							.booking-box-duration â†’
							a(href='#0').booking-box-checkout 
								span Check-Out
					.col-3.col-lg
						a(href='#0') 
							span Amount
					.col-5.col-lg
						a(href='#0') 
							span Deposit
					.col-4.col-lg
						a.selected.sort-desc(href='#0') 
							span Payment Status
			
