extends _main.pug

block title
	| Properties
	
block style
	
block header
	+header
		a.nav-item.nav-link(href='index.html')
			i.fas.fa-chart-pie 
			|  Dashboard 
		a.nav-item.nav-link.active(href='properties.html') 
			i.fas.fa-list
			|  Properties
			span.sr-only (current)
		a.nav-item.nav-link(href='bookings.html') 
			i.fas.fa-calendar-check 
			|  Bookings
		a.nav-item.nav-link(href='team.html') 
			i.fas.fa-users 
			|  Team
		a.nav-item.nav-link(href='#') 
			i.fas.fa-cog 
			|  Settings

block content
	
	.page-header.has-border-bottom.mb-0
		h1.page-title Properties 
			span.text-muted  - 12
		.booking-filter-stack
			select#inlineFormInputName2.custom-select.custom-select-sm.mb-2.mr-1(style='min-width:10rem;')
				option Bulk Action
				option Option 1
				option Option 2
			button.btn.btn-sm.btn-outline-secondary.mb-2(type='submit') Apply

			
		
	.page-body
		.content-box
			form.filter-form
				.form-row.align-items-end
					.form-group.col-md-3
						label(for='filter-search') Search
						input#filter-search.form-control.form-control-sm(type='text', placeholder='Start typing â€¦')
					.form-group.col-md-2
						label(for='filter-cities') All Cities
						select.custom-select.custom-select-sm#filter-payment-status
							option All
							option New York
							option Detroit
							option Toronto
					.form-group.col-md-2.ml-auto
						label(for='filter-export') Export
						select.custom-select.custom-select-sm#filter-export
							option All
							option CSV
							option PDF
			
			
			// Mobile Sorting Options (hidden on desktop)
			.booking-table-filter-mobile.d-block.d-lg-none
				.form-group
					select.custom-select.custom-select-sm
						option(selected) Sort by:
						option ID
						option Name
						option Address
						option Currency
						option PMS Status
						option Connection Status
			
			// Desktop Sorting Options (hidden on mobile)
			.table-header.d-none.d-lg-block
				.row.no-gutters
					.col-2
						.table-box-check.d-flex
							.custom-control.custom-checkbox
								input#sorter-check.custom-control-input(type='checkbox')
								label.custom-control-label(for='sorter-check')
							a(href='#0') 
								span ID

					.col-3
						a(href='#0').selected.sort-desc 
							span Name
					.col-3 
						a(href='#0') 
							span Address
					.col
						a(href='#0') 
							span Currency
					.col
						a(href='#0') 
							span PMS Status
					.col-2.pl-3
						a(href='#0') 
							span Connection Message
					
						
			
			// Property Card
			.property-card.property-connected
				.card-pane
					.row.no-gutters
						.col-4.col-lg-2
							.table-box-check.d-flex
								.custom-control.custom-checkbox
									input#check-01.custom-control-input(type='checkbox')
									label.custom-control-label(for='check-01')
								| ID-545934
						.col-4.col-lg-3 
							.single-line Ocean Villa and Some very long title for test and see
						
						.col-4.col-lg-3
							.single-line.text-muted 127 Marlon Ways Suite, San Francisco, CA 29499
						.col-4.col-lg.pl-4.pl-lg-0 CAD
						.col-4.col-lg
							+checkbox-toggle-highlighted('checkbox-1')
						.col-4.col-lg-2.pl-lg-3
							.d-flex.align-items-center.justify-content-between
								span.badge.badge-success Connected
								+property-action-dropdown
				+property-card-collapse('property-001')
				
				// Property Card
			.property-card.property-disconnected
				.card-pane
					.row.no-gutters
						.col-4.col-lg-2
							.table-box-check.d-flex
								.custom-control.custom-checkbox
									input#check-02.custom-control-input(type='checkbox')
									label.custom-control-label(for='check-02')
								| ID-545934
						.col-4.col-lg-3 
							.single-line Ocean Villa and Some very long title for test and see
						
						.col-4.col-lg-3
							.single-line.text-muted 127 Marlon Ways Suite, San Francisco, CA 29499
						.col-4.col-lg.pl-4.pl-lg-0 CAD
						.col-4.col-lg
							+checkbox-toggle-highlighted('checkbox-2')
						.col-4.col-lg-2.pl-lg-3
							.d-flex.align-items-center.justify-content-between
								span.badge.badge-danger Disconnected
								+property-action-dropdown
				+property-card-collapse('property-002')
				
		+loader
				
				
block scripts